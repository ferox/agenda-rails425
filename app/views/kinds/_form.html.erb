<%= form_for(@kind, html: { class: "dark-matter" }) do |f| %>
  <% if @kind.errors.any? %>
    <div id="error_explanation">
      <h2><%= "#{pluralize(@kind.errors.count, 'error')} #{t('messages.errors')}:" %></h2>
      <ul>
      <% @kind.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
      <br><br>
    </div>
  <% end %>

  <h1>Cadastro de Tipos</h1>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="actions">
    <%= f.submit "Salvar", class: "btn btn-primary" %>
    <%= link_to 'Voltar', kinds_path, class: "btn btn-primary" %>
  </div>
<% end %>
